@model UserProfile

@{
    ViewData["Title"] = "Thien Nguyen profile page";
}

<body>

    <div class="container mt-4">
        <div class="profile-header text-center mb-4">
            <h1>Profile Page</h1>
        </div>

        <div>
            <h4>UserProfile</h4>
            <hr />
            <dl class="row profile-list">
                <dt class="col-sm-2">ID</dt>
                <dd class="col-sm-10">@Model.UserProfileId</dd>

                <dt class="col-sm-2">Full Name</dt>
                <dd class="col-sm-10">@Model.FullName</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">Phone Number</dt>
                <dd class="col-sm-10">@Model.PhoneNumber</dd>

                <dt class="col-sm-2">Image URL</dt>
                <dd class="col-sm-10">@Model.ImageUrl</dd>

                <dt class="col-sm-2">GitHub URL</dt>
                <dd class="col-sm-10">@Model.GitHubUrl</dd>

                <dt class="col-sm-2">Skilled Languages</dt>
                <dd class="col-sm-10">
                    <ul class="skill-list">
                        @foreach (string languageSkill in Model.SkilledLanguages)
                        {
                            <li>@languageSkill</li>
                        }
                    </ul>
                </dd>
            </dl>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
